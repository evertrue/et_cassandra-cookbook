#!/usr/bin/env bash

set -e

source /etc/cassandra/snapshots.conf

root_dir=`dirname "<%= node['et_cassandra']['config']['data_file_directories'].first %>"`
data_dirs="<%= node['et_cassandra']['config']['data_file_directories'].join(' ') %>"
work_dir="${root_dir}/backup_work_dir"
old_pwd="$PWD"

mkdir -p "${work_dir}"

# Performs the snapshot and gets the ID
snapshot_id=`nodetool -h localhost snapshot | \
             grep 'Snapshot directory: ' | \
             awk '{print $3}'`

let dir_index=1

for data_dir in $data_dirs; do
  for keyspace in `find $data_dir -maxdepth 1 -mindepth 1 -type d -exec basename {} \;`; do
    tarball="${work_dir}/$keyspace-$dir_index.tar.gz"

    if stat "$data_dir"/*/*/snapshots/$snapshot_id > /dev/null; then
      cd "$data_dir"
      tar -czf "$tarball" */*/snapshots/"$snapshot_id"

      trap "rm -f $tarball; cd \"$old_pwd\"; exit" INT TERM EXIT

      backup_name=$keyspace-$dir_index-`date +%Y-%m-%dT%H%M%S`

      /usr/local/bin/s3put \
        --access_key $AWS_ACCESS_KEY_ID \
        --secret_key $AWS_SECRET_ACCESS_KEY \
        --bucket $BUCKET \
        --prefix "$work_dir" \
        --key_prefix "cassandra/<%= node.chef_environment %>/$backup_name" \
        "$tarball"

      rm -f "$tarball"

      trap - INT TERM EXIT
    else
      echo "Nothing to back up in */*/snapshots/$snapshot_id"
    fi
  done
  let dir_index++
done

cd "$old_pwd"
